#include<stdio.h>

int main(){
	int a, b, i, j;
	scanf("%d", &a);
	
	for(i=1; i<=a; i++){
		for(j=1; j<=i; j++){
			printf(" *");
		}
		printf("\n");
	}
	
	return 0;
}



#include<stdio.h>

int main(){
	int i, j, x;
	
	for(i=1; i<=5; i++){
		
		for(x=2; x<=i; x++){
			printf("  ");
		}
		
		for(j=5; j>=i; j--){
			printf(" *");
		}
		
		printf("\n");
	}
	
	return 0;
}
